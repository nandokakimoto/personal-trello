//- home.pug
doctype html
html(lang="en", ng-app="personalTrello")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    block title
      title= 'Trello'

    <!-- Bootstrap -->
    link(href="/css/bootstrap.min.css", rel="stylesheet")
    link(href="/css/home.css", rel="stylesheet")
    block stylesheets

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
      script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->
  body
    nav.navbar.navbar-inverse.narvar-fixed-top
      div.container
        div.navbar-header
          button(type="button", data-toggle="collapse", data-target="#navbar", aria-controls="navbar", class="navbar-toggle collapsed")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          <a class="navbar-brand" href="#"></a>

        div(id="navbar.collapse.navbar-collapse", ng-controller="HeaderCtrl")
          ul.nav.navbar-nav
            li.active
              a(href="/") Home
          ul(class="nav navbar-nav navbar-right", ng-show="currentUser")
            li
              button(class="btn btn-default navbar-btn", ng-click="logout()") Sign out
    div#main-container.container
      div.starter-template
        div(ng-view)

    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")
    script(src="/js/angular.min.js")
    script(src="/js/angular-route.min.js")
    script(src="/js/angular-resource.min.js")
    script(src="/js/angular-cookies.min.js")
    script(src="/js/angular-sanitize.min.js")

    script(src="/js/init.js")
    script(src="/js/routes.js")
    script(src="/js/controllers/header.js")
    script(src="/js/controllers/signup.js")
    script(src="/js/controllers/signin.js")
    script(src="/js/services/session.js")
    script(src="/js/services/auth.js")
  </body>
</html>
